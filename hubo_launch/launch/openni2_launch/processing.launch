<!-- Load full set of processing nodelets for an OpenNI device -->
<launch>

  <!-- Name of nodelet manager, must be fully resolved -->
  <arg name="manager" />

  <arg name="respawn" default="false" />
  
  <arg name="rectify" default="true" />
  
  <!-- Remapping arguments -->
  <arg name="rgb"              default="rgb" />
  <arg name="ir"               default="ir" />
  <arg name="depth"            default="depth" />
  <arg name="remapped_tf" default="/tf" />

  <!-- IR processing -->
  <include file="$(find hubo_launch)/launch/openni2_launch/ir.launch"
	   ns="$(arg ir)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
    <arg name="remapped_tf" value="$(arg remapped_tf)" />
  </include>
  
   <!-- Color processing -->
  <include file="$(find hubo_launch)/launch/openni2_launch/color.launch"
	   ns="$(arg rgb)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
    <arg name="remapped_tf" value="$(arg remapped_tf)" />
  </include>
  
     <!-- Pointcloud processing -->
  <include file="$(find hubo_launch)/launch/openni2_launch/pointclouds.launch" >
    <arg name="manager" value="$(arg manager)" /> 
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
    <arg name="remapped_tf" value="$(arg remapped_tf)" />
  </include>

  <!-- Depth processing -->
  <include file="$(find hubo_launch)/launch/openni2_launch/depth.launch"
	   ns="$(arg depth)">
    <arg name="manager" value="$(arg manager)" />
    <arg name="respawn" value="$(arg respawn)" />
    <arg name="rectify" value="$(arg rectify)" />    
    <arg name="rgb" value="$(arg rgb)" />
    <arg name="ir" value="$(arg ir)" />
    <arg name="depth" value="$(arg depth)" />
    <arg name="remapped_tf" value="$(arg remapped_tf)" />
  </include>


</launch>
